# ==================================
# ShineWardrobe - Environment Variables
# ==================================

# Database Configuration
DATABASE_URL=postgresql://shinewardrobe:shinewardrobe123@postgres:5432/shinewardrobe
POSTGRES_USER=shinewardrobe
POSTGRES_PASSWORD=shinewardrobe123
POSTGRES_DB=shinewardrobe

# JWT Authentication
JWT_SECRET=SECRET_TOKEN
JWT_EXPIRES_IN=7d

# External API Keys
WEATHER_API_KEY=KEY_TOKEN

OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# Application Ports
BACKEND_PORT=8080
FRONTEND_PORT=3000
NODE_ENV=development

# Scraper Configuration
SCRAPER_SCHEDULE=0 59 23 * * *
SCRAPER_MAX_PRODUCTS=50

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Chrome/Browser Settings (for webscraper)
CHROME_HEADLESS=true
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Logging
LOG_LEVEL=info
